{
  "compilerOptions": {
    "outDir": "./dist/",
    /* Language and Environment */
    "module": "ESNext",
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true /* Skip type checking all .d.ts files. */
  }
}
